/**
 * Implements hook_help().
 */
function lightgallery_help($path, $arg) {
  switch ($path) {
    case 'admin/help#lightgallery':
      $output = file_get_contents(drupal_get_path('module', 'lightgallery') . '/README.txt');
      return '<pre>' . check_plain($output) . '</pre>';
  }
}

